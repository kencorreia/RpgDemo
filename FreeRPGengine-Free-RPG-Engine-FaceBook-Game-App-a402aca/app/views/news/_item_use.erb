<div class="actor">
  <%= character_picture_link(news.character) %>
</div>

<div class="subject">
  <%= item_image(news.item, :icon) if !news.blank? %>
</div>

<div class="description">
  <%= t(".text",
        :actor  => character_name_link(news.character, {}, {:useyou => true, :capitalize => true}),
        :item   => content_tag(:strong, news.try(:item).try(:name))
      ).html_safe %>

  <% if news.payouts %>
    <%= t("news.payouts.text", :payouts => payout_string(news.payouts, t("news.payouts.and"))).html_safe %>
  <% end %>
</div>
